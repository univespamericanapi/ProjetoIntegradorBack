    "paths": {
        "/api/auth/login": {
            "post": {
                "summary": "Login de usuário.",
                "description": "Rota responsável pelo login dos usuários ao sistema.",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/usuario"
                            },
                            "examples": {
                                "usuario": {
                                    "value": {
                                        "usuario_login": "joao",
                                        "usuario_senha": "1234"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "schema": {
                                    "$ref": "#/components/schemas/login"
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Senha inválida!"
                    },
                    "404": {
                        "description": "Usuário não encontrado."
                    }
                }
            }
        },
        "/api/auth/refreshToken": {
            "post": {
                "summary": "Refresh JWT Token.",
                "description": "Rota responsável pelo refresh do JWT Token.",
                "tags": [
                    "Autenticação"
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "refreshToken": {
                                        "type": "string"
                                    }
                                }
                            },
                            "examples": {
                                "usuario": {
                                    "value": {
                                        "refreshToken": "cb986898-bd91-4251-809f-1b37fa91e8ae"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "type": "object",
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "accessToken": {
                                            "type": "string"
                                        },
                                        "refreshToken": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "403": {
                        "description": "RefreshToken é requerido!"
                    },
                    "404": {
                        "description": "RefreshToken não encontrado!"
                    }
                }
            }
        },
        "/api/admin/usuario/criar": {
            "post": {
                "summary": "Cadastro de usuário.",
                "description": "Rota responsável pelo cadastro de novos usuários ao sistema.",
                "tags": [
                    "Usuário"
                ],
                "security": [
                    {
                        "JwtToken": []
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/usuario"
                            },
                            "examples": {
                                "usuario": {
                                    "value": {
                                        "usuario_login": "joao",
                                        "usuario_senha": "1234ABcd",
                                        "usuario_nome": "João Silva",
                                        "usuario_cargo": "staff"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario registrado com sucesso!"
                    },
                    "400": {
                        "description": "Usuário já está em uso!"
                    },
                    "401": {
                        "description": "Não autorizado!"
                    },
                    "403": {
                        "description": "Nenhum token foi fornecido!"
                    },
                    "404": {
                        "description": "Não encontrado!"
                    },
                    "406": {
                        "description": "Senha inválida!"
                    }
                }
            }
        },
        "/api/admin/usuario/listar": {
            "get": {
                "summary": "Listagem de todos os usuários.",
                "description": "Rota responsável pela listagem de todos usuários cadastrados.",
                "tags": [
                    "Usuário"
                ],
                "security": [
                    {
                        "JwtToken": []
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Ok",
                        "content": {
                            "application/json": {
                                "type": "array",
                                "items": {
                                    "schema": {
                                        "$ref": "#/components/schemas/usuarioView"
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Não autorizado!"
                    },
                    "403": {
                        "description": "Nenhum token foi fornecido!"
                    },
                    "404": {
                        "description": "Não encontrado!"
                    }
                }
            }
        },
        "/api/admin/usuario/deletar/{idUsuario}": {
            "delete": {
                "summary": "Deletar um usuário pelo id",
                "description": "Rota responsável por deletar um usuário utilizando o id para encontrá-lo.",
                "tags": [
                    "Usuário"
                ],
                "parameters": [
                    {
                        "name": "idUsuario",
                        "in": "path",
                        "description": "Id do usuário.",
                        "required": true
                    }
                ],
                "security": [
                    {
                        "JwtToken": []
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Usuario deletado com sucesso!"
                    },
                    "401": {
                        "description": "Não autorizado!"
                    },
                    "403": {
                        "description": "Nenhum token foi fornecido!"
                    },
                    "404": {
                        "description": "Não encontrado!"
                    }
                }
            }
        },
